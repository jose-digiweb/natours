extends base

mixin navItem(link, text, icon, active)
  li(class=`.${active ? 'side-nav--active' : ''}`)
    a(href=`${link}`)
      svg
        use(xlink:href=`img/icons.svg#icon-${icon}`)
      | #{text}

block content
  main.main
    div.user-view
      nav.user-view__menu
        ul.side-nav
          +navItem('#', 'settings', 'settings', true)
          +navItem('/my-bookings', 'My bookings', 'briefcase', false )
          +navItem('#', 'My reviews', 'star', false )
          +navItem('#', 'Billing', 'credit-card', false )

        -if(user.role === 'admin')
          div.admin-nav
            h5.admin-nav__heading Admin
            ul.side-nav
              +navItem('#', 'Manage tours', 'map', false )
              +navItem('#', 'Manage users', 'users', false )
              +navItem('#', 'Manage reviews', 'star', false )
              +navItem('#', 'Manage bookings', 'briefcase', false )

      div.user-view__content
        div.user-view__form-container
          h2.heading-secondary.ma-bt-md Your account settings

          //- WITHOUT API
          //-form.form-user-data(action='/submit-user-data' method='POST')

          //- USING THE API
          form.form-user-data
            div.form__group
              label.form__label(for='name') Name
              input#name.form__input(type='text', value=`${user.name}`, name='name', required)

            div.form__group.ma-bt-md
              label.form__label(for='email') Email address
              input#email.form__input(type='email', value=`${user.email}`, name='email', required)

            div.form__group.form__photo-upload
              img.form__user-photo(src=`img/users/${user.photo}`, alt=`${user.name}'s photo`)
              input.form__upload(type='file', accept='image/*', id='photo', name='photo')
              label(for='photo') Choose new photo
              

            div.form__group.right
              button.btn.btn--small.btn--green Save settings

        div.line &nbsp;

        div.user-view__form-container
          h2.heading-secondary.ma-bt-md Password change
          form.form-user-password
            div.form__group
              label.form__label(for='password-current') Current password
              input#password-current.form__input(type='password', placeholder='••••••••', required, minlength='8')
            div.form__group
              label.form__label(for='password') New password
              input#password.form__input(type='password', placeholder='••••••••', required, minlength='8')
            div.form__group.ma-bt-lg
              label.form__label(for='password-confirm') Confirm password
              input#password-confirm.form__input(type='password', placeholder='••••••••', required, minlength='8')
            div.form__group.right
              button.btn.btn--small.btn--green.btn--save-password Save password
